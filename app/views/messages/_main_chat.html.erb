<div class="chat_header">
    <div class="left-header">
      <div class="header-title">room_name</div>
    </div>
    <div class="right-header">
      <div class="escape_button">
        <a href="">チャットを終了する</a>
      </div>
    </div>
</div>
<div class="messages">

  <div class="message">
    <div class="upper-message">
      <div class="message-user">Tom</div>
      <div class="message-date">2020/01/01(Wed) 0:00:00</div>
    </div>
    <div class="lower-message">
      <div class="message-text">こんちゃ</div>
    </div>
  </div>

  <div class="message">
    <div class="upper-message">
      <div class="message-user">Tom</div>
      <div class="message-date">2020/01/01(Wed) 0:00:00</div>
    </div>
    <div class="lower-message">
      <div class="message-text">こんちゃ</div>
    </div>
  </div>
</div>
<div class="form">
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
</div>